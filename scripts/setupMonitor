#!/bin/bash

#2 ex. Monitors -> Turn off Laptop Display
#1 ex. Monitor -> Mirror Laptop
#0 ex. Monitors -> Just show Laptop

HDMI=$( xrandr | grep "HDMI1" | grep -v "disconnected" )
VGA=$( xrandr | grep "DP2" | grep -v "disconnected" )

#2 ex. Monitors
if [[ "$VGA" != "" && "$HDMI" != "" ]]; then
    xrandr --output DP2 --auto --output HDMI1 --auto --right-of DP2 --output eDP1 --off
elif [[ "$VGA" != "" ]]; then
    xrandr --output eDP1 --auto --output DP2 --auto --same-as eDP1 --output HDMI1 --off
elif [[ "$HDMI" != "" ]]; then
    xrandr --output eDP1 --auto --output HDMI1 --auto --same-as eDP1 --output DP2 --off
else
    xrandr --output eDP1 --auto --output HDMI1 --off --output DP2 --off
fi
